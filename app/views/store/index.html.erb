<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<% @items.each do |item| %>
  <p><%= link_to item.title, item_path(item) %> |
  <%= number_to_currency(item.price/100) %> |
  Only <%= item.inventory %> remaining
  <% if current_user %>
    | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
  <% end %>
<% end %>
